<% if @recent_products.blank?  %>
<p>Sorry, we will be updating the shop with some new products shortly.</p>

<% else %>

<div class="container">
<div class="cards " >

 <% @recent_products.each do |p| %>

   <a class="card" href=  "<%=  product_path(p) %>" >



   <span class="card-header" style="background-image: url( <%= p.picurl %> );">

     <span class="card-title">
       <h3> <%= p.title %> </h3>
     </span>
   </span>
   <span class="card-summary">
     <%= truncate(p.template, length: 50 , separator: ' ')  %>

   </span>
   <span class="card-meta">
     Active: <%= p.startdate %>  - <%= p.enddate %>
   </span>
 </a>

<% end %>
</div>
<% end %>
</div>
