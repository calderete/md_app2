
<% @user = current_user %>
<% if user_signed_in? && @user.admin %>


  <div class="panel panel-default">
    <!-- Default panel contents -->
    <div class="panel-heading">Tax Rates:
      <% if @taxes.empty? %>
        Nothing here...
      <% else %>
        <%= @taxes.count %>
      <% end %>

    </div>
    <div class="panel-body">
<table>
  <thead>
  <tr>
    <th>ID      </th>
    <td>&nbsp;</td>
    <th>Tax     </th>
    <td>&nbsp;</td>
    <th>Province</th>
    <td>&nbsp;</td>
    <th>Updated</th>

  </tr>
  </thead>

  <tbody>
    <% @taxes.each do |tax| %>
      <tr>
        <td><%=  tax.prov_id  %></td>
        <td>&nbsp;</td>
        <td><%=  tax.tax_rate  %></td>
        <td>&nbsp;</td>
        <td><%=  tax.comment  %></td>
        <td>&nbsp;</td>
        <td><%=  tax.updated_at  %></td>
  </tr>
    <% end %>
  </tbody>
</table>
    </div>
  </div>

  <div class="pagenav">
    <%== pagy_bootstrap_nav(@pagy) %> <br/>
  </div>

<% else %>
  <div class="alert alert-warning" role="alert"> You must be signed in to view the taxes.</div>
<% end %>
