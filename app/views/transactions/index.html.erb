
<% if user_signed_in? %>

  <div class="panel panel-default">
    <!-- Default panel contents -->
      <div class="panel-heading">Transactions:  <% if @transactions.empty?  %>
            Nothing here...
        <% else %>
            <%= @transactions.count %> items...
        <% end %>
        <div class="pull-right"><font size="1">Transactions are displayed for the last 60 days.</font> </div>

      </div>

      <div class="panel-body">
      <table class="table">
  <thead>
  <tr>
    <th>id</th>
    <th>Added</th>
    <th>Invoice #</th>
    <th>Shipped?</th>
    <th>Courier</th>
    <th>Tracking #</th>
    <th>Comment</th>
    <th>Action</th>
  </tr>
  </thead>

  <tbody>

  <% if @transactions.empty?  %>

  <% end %>


    <% @transactions.each do |transaction| %>
       <tr class="<%= cycle("even", "odd") %>">

        <td> <%=  transaction.id  %>  </td>
        <td><%= transaction.created_at.strftime("%m/%d/%Y")  %> </td>
        <td> <%=  transaction.invoice_number  %>  </td>
        <td> <%=  transaction.shipped  %>  </td>
        <td> <%=  transaction.postal_carrier  %>  </td>
        <td> <%=  transaction.tracking_number  %>  </td>
        <td> <%= link_to transaction.transaction_msg , transaction  %></td>

        <%#= if Feedbacks.exists?(transaction.id) %>
        <!--    <td> Feedback received...</td> -->

         <%# else %>
            <td><%= link_to "Leave feedback...",new_transaction_feedback_url(:transaction_id => transaction.id )%> </td>
          <%# end %>
      </tr>
    <% end %>
  </tbody>
</table>

      </div>
    </div>


    <br>

<div class="pagenav">

  <%== pagy_bootstrap_nav(@pagy) %> <br/>
</div>
<% else %>

    <div class="alert alert-warning" role="alert">You must be signed in to see the transactions.</div>

<% end %>
