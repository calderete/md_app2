  <% @products.each do |product| %>

    <!-- <div class="img"> -->

      <a class="card" href=  "<%=  product_path(product) %>" >

        <span class="card-header" style="background-image: url( <%= asset_pack_path "media/images/#{product.picurl}" %> );">

          <span class="card-title">
            <h3> <%= product.title %> </h3>
          </span>
        </span>
        <span class="card-summary">
          <%= truncate(product.template, length: 50 , separator: ' ')  %>

        </span>
        <span class="card-meta">
          Active: <%= product.startdate %>  - <%= product.enddate %>
        </span>
      </a>


      <% end %>
