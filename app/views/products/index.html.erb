<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Draft</th>
      <th>Active</th>
      <th>Category</th>
      <th>Title</th>
      <th>Template</th>
      <th>Price</th>
      <th>Msrp</th>
      <th>Startdate</th>
      <th>Endate</th>
      <th>Funded</th>
      <th>Picurl</th>
      <th>Qty</th>
      <th>Length</th>
      <th>Width</th>
      <th>Height</th>
      <th>Weight</th>
      <th>Courier</th>
      <th>Courierurl</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.draft %></td>
        <td><%= product.active %></td>
        <td><%= product.category_id %></td>
        <td><%= product.title %></td>
        <td><%= product.template %></td>
        <td><%= product.price %></td>
        <td><%= product.msrp %></td>
        <td><%= product.startdate %></td>
        <td><%= product.endate %></td>
        <td><%= product.funded %></td>
        <td><%= product.picurl %></td>
        <td><%= product.qty %></td>
        <td><%= product.length %></td>
        <td><%= product.width %></td>
        <td><%= product.height %></td>
        <td><%= product.weight %></td>
        <td><%= product.courier %></td>
        <td><%= product.courierurl %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

