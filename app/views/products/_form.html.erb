
<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :draft %>
    <%= f.input :active %>
    <%= f.input :title %>
    <%= f.input :template %>
    <%= f.input :price %>
    <%= f.input :msrp %>
    <%= f.input :startdate %>
    <%= f.input :endate %>
    <%= f.input :funded %>
    <%= f.input :picurl %>
    <%= f.input :qty %>
    <%= f.input :length %>
    <%= f.input :width %>
    <%= f.input :height %>
    <%= f.input :weight %>
    <%= f.input :courier %>
    <%= f.input :courierurl %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
