<div class="container gallery-container">


<% @products.each do |product| %>
<div class="tz-gallery">

			<div class="row">

		<div class="col-sm-6 col-md-4" >
			<div class="thumbnail">

<a  href=  "<%=  product_path(product) %>" >


		<!--	<h5> <%#= product.title %> </h5> -->


		<img src="<%= asset_pack_path "media/images/#{product.picurl }" %>" alt=""><br/>
</a>
<div class="caption" >

	<!--	<#%= truncate(product.template, length: 50 , separator: ' ')  %><br/> -->
		<small><i>Available between:</i> <%= product.startdate %>  - <%= product.enddate %></small>
</div>
</div>
</div>

<% end %>
</div>

